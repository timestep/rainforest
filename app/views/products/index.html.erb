<h1>Products List</h1>
<p>A list of all the products</p>
<table id='list_of_products'>
	<thead>
		<tr>
			<th>#ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |p| %>
		<tr>
			<th><%=p.id%></th>
			<th><a href="/products/<%=p.id%>"><%=p.name%></a></th>
			<th><%=p.description%></th>
			<th><%=p.price_in_cents%></th>
		</tr>
		<% end %>
	</tbody>
</table>



